@{
    ViewData["Title"] = "Product List";
}

<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />

<link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet" />

<script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js "></script>

<h1>Product List </h1>

<div class="container">
    <br />
    <div style="width:90%; margin:0 auto;">
        <table id="testsTable" class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
            <thead>
                <tr>
                    <th>Product Id</th>
                    <th>Product Name</th>
                    <th>Category Type</th>                    
                </tr>
            </thead>
        </table>
    </div>
</div>

<script>
        $(document).ready(function ()
        {

            $("#testsTable").DataTable({
                "processing": true, // for show progress bar
                "serverSide": true, // for process server side
                "filter": true, // this is for disable filter (search box)
                "orderMulti": false, // for disable multiple column at once
                "ajax": {
                    "url": "Product/LoadData",
                    "type": "POST",
                    "datatype": "json"
                },
                "columnDefs":
                [{
                    "targets": [0],
                    "visible": false,
                    "searchable": false
                    },
                    {
                        "targets": [5],
                        "orderable": true,
                        "searchable": false
                }],
                "columns": [
                    { "data": "productId", "name": "productId", "autoWidth": true },
                    { "data": "productName", "name": "productName", "autoWidth": true },
                    { "data": "categoryType", "name": "categoryType", "autoWidth": true }
                ]

            });
    });

</script>
